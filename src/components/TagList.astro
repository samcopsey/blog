---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<ul class="tag-list">
  {tags.map(tag => (
    <li>
      <span class="pill">{tag}</span>
    </li>
  ))}
</ul>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .pill {
    background-color: var(--pill-bg);
    color: var(--pill-text);
    border-radius: 9999px;
    padding: 4px 12px;
    font-size: 12px;
    display: inline-block;
  }
</style>
