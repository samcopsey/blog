  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 32px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  @media (min-width: 768px) {
    .footer-inner {
      padding: 32px 48px;
    }
  }

  .copyright {
    color: var(--text-secondary);
    font-size: 14px;
  }

  .footer-links {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
    display: flex;
    align-items: center;
  }

  .footer-links a:hover {
    color: var(--accent);
  }
</style>
