---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';
import { getReadingTime } from '../utils/reading-time';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => a.data.sortOrder - b.data.sortOrder);

---

<BaseLayout
  title="Home"
  description="Sam Copsey — Engineering & Innovation Manager writing about AI agent development, engineering leadership, and sovereign cloud on Azure for the UK."
>
  <!-- ═══ HERO ═══ -->
  <section class="hero" aria-label="Introduction">
    <!-- Background glow orb -->
    <div class="hero-orb" aria-hidden="true"></div>
    <!-- Subtle dot-grid -->
    <div class="hero-grid" aria-hidden="true"></div>

    <div class="hero-inner">
      <span class="hero-label">Engineering &amp; Innovation Manager · UK</span>

      <h1 class="hero-heading">
        Engineering leadership<br />
        meets <em>AI agents.</em>
      </h1>

      <p class="hero-sub">
        Practical guides on building AI agents in the Microsoft ecosystem,
        leading engineering teams through the AI transition, and delivering
        sovereign solutions on Azure for the UK.
      </p>

      <div class="hero-pillars" aria-label="Topics covered">
        <span class="hero-pillar">Agent Building</span>
        <span class="hero-pillar-sep" aria-hidden="true">·</span>
        <span class="hero-pillar">Engineering Leadership</span>
        <span class="hero-pillar-sep" aria-hidden="true">·</span>
        <span class="hero-pillar">Sovereign AI</span>
      </div>

      <div class="hero-ctas">
        <a href="/blog" class="cta-primary">Read the blog</a>
        <a href="/projects" class="cta-secondary">View projects</a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator" aria-hidden="true">
      <span class="scroll-label">Scroll</span>
      <svg class="scroll-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M8 3v10M3 9l5 5 5-5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </section>

  <!-- ═══ LATEST POSTS ═══ -->
  {latestPosts.length > 0 && (
    <section class="content-section">
      <div class="section-header" data-reveal>
        <h2 class="section-title">Latest</h2>
        <a href="/blog" class="view-all">View all →</a>
      </div>
      <div class="posts-grid">
        {latestPosts.map((post, i) => (
          <div data-reveal style={`transition-delay: ${i * 0.12}s`}>
            <PostCard post={post} minutesRead={getReadingTime(post.body)} />
          </div>
        ))}
      </div>
    </section>
  )}

  <!-- ═══ FEATURED PROJECTS ═══ -->
  {featuredProjects.length > 0 && (
    <section class="content-section">
      <div class="section-header" data-reveal>
        <h2 class="section-title">Projects</h2>
        <a href="/projects" class="view-all">View all →</a>
      </div>
      <div class="projects-grid">
        {featuredProjects.map((project, i) => (
          <div data-reveal style={`transition-delay: ${i * 0.12}s`}>
            <ProjectCard project={project} />
          </div>
        ))}
      </div>
    </section>
  )}
</BaseLayout>

<!-- Scroll-reveal observer — vanilla JS, no framework needed -->
<script>
  const els = document.querySelectorAll('[data-reveal]');
  const io = new IntersectionObserver(
    entries => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('in');
          io.unobserve(e.target);
        }
      });
    },
    { threshold: 0.08, rootMargin: '0px 0px -40px 0px' }
  );
  els.forEach(el => io.observe(el));
</script>

<style>
  /* ─── Hero ─────────────────────────────────────────────────── */
  .hero {
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 60px);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    /* Break out of the max-width container so the glow fills the full viewport */
    margin-left: calc(50% - 50vw);
    width: 100vw;
    /* Mobile padding mirrors main's px-6 */
    padding: 80px 24px 140px;
  }

  @media (min-width: 768px) {
    .hero {
      /* At md+, match main's px-12, then grow with the viewport on wide screens */
      padding-left: max(48px, calc((100vw - 1200px) / 2 + 48px));
      padding-right: max(48px, calc((100vw - 1200px) / 2 + 48px));
    }
  }

  /* Full-coverage glow — fills the entire hero, not just a small orb */
  .hero-orb {
    position: absolute;
    inset: 0;
    background:
      /* Primary spotlight — right of centre */
      radial-gradient(ellipse 75% 65% at 68% 42%, rgba(79, 70, 229, 0.32) 0%, rgba(79, 70, 229, 0.08) 45%, transparent 65%),
      /* Purple bloom — upper left, behind text */
      radial-gradient(ellipse 60% 55% at 20% 35%, rgba(147, 51, 234, 0.22) 0%, transparent 55%),
      /* Soft blue ambient — full coverage base */
      radial-gradient(ellipse 130% 90% at 50% 55%, rgba(37, 99, 235, 0.09) 0%, transparent 70%);
    pointer-events: none;
    animation: orbPulse 7s ease-in-out infinite;
  }

  :global(.light) .hero-orb {
    background:
      radial-gradient(ellipse 75% 65% at 68% 42%, rgba(79, 70, 229, 0.14) 0%, transparent 60%),
      radial-gradient(ellipse 60% 55% at 20% 35%, rgba(147, 51, 234, 0.10) 0%, transparent 55%),
      radial-gradient(ellipse 130% 90% at 50% 55%, rgba(37, 99, 235, 0.05) 0%, transparent 70%);
  }

  @keyframes orbPulse {
    0%, 100% { opacity: 0.75; }
    50%       { opacity: 1; }
  }

  /* Dot grid — expanded to fill the full hero width */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.045) 1px, transparent 1px);
    background-size: 28px 28px;
    /* Fade out toward edges — wider mask so dots fill more space */
    mask-image: radial-gradient(ellipse 110% 95% at 50% 50%, black 25%, transparent 100%);
    pointer-events: none;
  }

  :global(.light) .hero-grid {
    background-image: radial-gradient(rgba(0, 0, 0, 0.055) 1px, transparent 1px);
  }

  /* Hero inner content — left-aligned, constrained width */
  .hero-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
    max-width: clamp(320px, 56vw, 680px);
  }

  /* Label */
  .hero-label {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 28px;
    opacity: 0;
    animation: slideUp 0.6s ease forwards;
    animation-delay: 0.05s;
  }

  /* Heading */
  .hero-heading {
    font-size: clamp(2.4rem, 6vw, 5rem);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 1.05;
    color: var(--text-primary);
    margin: 0 0 28px;
    max-width: 820px;
    opacity: 0;
    animation: slideUp 0.7s ease forwards;
    animation-delay: 0.18s;
  }

  /* The italic "AI agents." gets accent colour */
  .hero-heading em {
    font-style: normal;
    color: var(--accent);
  }

  /* Sub-description */
  .hero-sub {
    font-size: 1.0625rem;
    color: var(--text-secondary);
    max-width: 520px;
    line-height: 1.7;
    margin: 0 0 32px;
    opacity: 0;
    animation: slideUp 0.7s ease forwards;
    animation-delay: 0.32s;
  }

  /* Pillar pills */
  .hero-pillars {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 40px;
    opacity: 0;
    animation: slideUp 0.7s ease forwards;
    animation-delay: 0.44s;
  }

  .hero-pillar {
    font-size: 12px;
    color: var(--text-tertiary);
    letter-spacing: 0.02em;
  }

  .hero-pillar-sep {
    color: var(--border-hover);
    font-size: 12px;
  }

  /* CTA buttons */
  .hero-ctas {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
    opacity: 0;
    animation: slideUp 0.7s ease forwards;
    animation-delay: 0.54s;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background-color: var(--accent);
    color: #fff;
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    padding: 10px 22px;
    border-radius: 8px;
    transition: background-color 0.15s ease, transform 0.15s ease;
  }

  .cta-primary:hover {
    background-color: var(--accent-hover);
    transform: translateY(-1px);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    padding: 10px 22px;
    border-radius: 8px;
    border: 1px solid var(--border-subtle);
    transition: color 0.15s ease, border-color 0.15s ease, transform 0.15s ease;
  }

  .cta-secondary:hover {
    color: var(--text-primary);
    border-color: var(--border-hover);
    transform: translateY(-1px);
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    color: var(--text-tertiary);
    opacity: 0;
    animation: slideUp 0.7s ease forwards, scrollFade 0.5s ease forwards;
    animation-delay: 0.9s, 0.9s;
  }

  .scroll-label {
    font-size: 11px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .scroll-arrow {
    animation: bounce 2s ease-in-out 1.5s infinite;
  }

  /* ─── Section content ───────────────────────────────────────── */
  .content-section {
    padding-bottom: 96px;
  }

  .content-section:first-of-type {
    padding-top: 16px;
  }

  .section-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border-subtle);
  }

  .section-title {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    margin: 0;
  }

  .view-all {
    color: var(--accent);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.15s ease;
  }

  .view-all:hover {
    color: var(--accent-hover);
  }

  .posts-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .projects-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* ─── Animations ────────────────────────────────────────────── */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(5px); }
  }

  @keyframes scrollFade {
    to { opacity: 1; }
  }

  /* ─── Scroll reveal ──────────────────────────────────────────── */
  [data-reveal] {
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.65s ease, transform 0.65s ease;
  }

  [data-reveal].in {
    opacity: 1;
    transform: none;
  }
</style>
